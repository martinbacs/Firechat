        <!--android:layout_height="wrap_content"-->
        <!--android:text="Send Meeting spot"/>-->
    <Button
        android:id="@+id/btn_send_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Current Location"
        android:onClick="getCurrentLocation"/>

</LinearLayout>
