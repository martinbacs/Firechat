<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="100dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/chat_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="24dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/chat_message_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_sender"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/chat_background_received"
        android:padding="8dp"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"/>


    <TextView
        android:id="@+id/chat_timestamp_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_message_received"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="24dp"
        android:textSize="10sp"
        android:textStyle="italic"
        android:textColor="@color/colorWhite"/>

</RelativeLayout>